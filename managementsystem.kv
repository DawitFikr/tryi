<WindowManager>:
	RegistrationWindow:
		name: "register"



<RegistrationWindow>:
	name: "register"
	
	BoxLayout:
		size: root.width, root.height 
		pos: 0,0
		orientation: "vertical"	
		
		canvas.before:
			Color:
				rgba: (0/255, 36/255, 107/255, 0.5)
			Rectangle:
				pos: self.pos
				size: self.size
				
		AnchorLayout:
			anchor_x: "center"
			anchor_y: "center"
						
			BoxLayout:
				orientation: "vertical"
				spacing: 15
				size_hint: .9, .8
				
				BoxLayout:
					orientation: "vertical"
					spacing: 15
					
					canvas.before:
						Color:
							rgba: (0/255, 36/255, 107/255, 0.75)
						Rectangle:
							pos: self.pos
							size: self.size
						
					Label:
						text: "REGISTRATION FORM"
						size_hint_y: None 
						height: 50
						font_size: "20sp"
						color: (202/255, 220/255, 252/255, 1)
						
					GridLayout:
						cols: 1
						spacing: 15
						
						size_hint_x: .95
						pos_hint: {"x": 0.025}
						padding: 10
						
						Label:
							id: error 
							text: ""
							markup: True 
							size_hint_y: 0.2
							text_size: self.size 
							halign: "left"
							valign: "top"
							
						TextInput:
							id: fname
							hint_text: "First Name *"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: lname
							hint_text: "Last Name *"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: phone
							hint_text: "Phone no. *"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: email
							hint_text: "Email address.:"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: gender 
							hint_text: "Gender M/F:"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: idnumber
							hint_text: "ID no. *"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: address 
							hint_text: "Address: City/Sub-city/Woreda/House no.:"
							multiline: False 
							size_hint_y: None
							height: 70
							
						TextInput:
							id: password 
							hint_text: "Password *"
							multiline: False 
							size_hint_y: None
							height: 70
							
					BoxLayout:
						size_hint_y: None
						height: 100
						
						AnchorLayout:
							anchor_x: "left"
							anchor_y: "bottom"
							Button:
								text: "<< Log in"
								on_release:
									root.manager.current = "login"
									root.manager.transition.direction = "right"
								
						AnchorLayout:
							anchor_x: "right"
							anchor_y: "bottom"
							
							Button:
								text: " Register Now"
								background_normal: ""
								background_color: (65/255, 255/255, 32/255, 0.7)
								on_release:
									root.register_user()
								
								
								
